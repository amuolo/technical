                "-I/home/andoras/installs/boost_1_80_0/include",
                "-std=c++17",
                "-m64",
                "-fmessage-length=0", 
                "-pthread",
                "-fopenmp",
                "-fopenmp-simd",
                "-g",
                "${file}",
                "-L/home/andoras/installs/OpenBLAS/lib",
                "-L/home/andoras/installs/boost_1_80_0/lib",
                "-L/usr/lib64/openmpi/lib",
