            "label": "C/C++: g++ build active file",
            "command": "/usr/lib64/ccache/g++",
            "args": [
                "-DARMA_DONT_USE_WRAPPER",
                "-DARMA_DONT_USE_HDF5",
                "-DARMA_DONT_USE_OPENMP",
                "-DARMA_USE_LAPACK", 
                "-DARMA_USE_BLAS",
                "-DARMA_USE_NEWARP",
